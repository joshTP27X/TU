---
import LibraryIcon from "@/icons/Library.astro";
import SideMenuItem from "./SideMenuItem.astro";
import HomeIcon from "@/icons/HomeIcon.astro"
import SearchIcon from "@/icons/SearchIcon.astro" //con esto en la carpeta tsconfig te olvidas de carpetas relativas
import { playlists } from "@/lib/data";
import SideMenuCard from "@/components/SideMenuCard.astro"
---
<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <SideMenuItem href="/">
                <HomeIcon />
                Inicio
            </SideMenuItem>
        </ul>
        <ul>
            <SideMenuItem href="/#">
                <SearchIcon />
                Buscar
            </SideMenuItem>
        </ul>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href="/">
                <LibraryIcon />
                Tu Biblioteca
            </SideMenuItem>
            {
                playlists.map(playlist => <SideMenuCard playlist={playlist} />)
            }

        </ul>
        
        
    </div>

    
</nav>
